int check_passwd (string passwd)
{
  int   i, p, n;
  if ((n = strlen (passwd)) < 5) return 0;

  while (!(passwd[i] <= 'Z' && passwd[i] >= 'A' ||
     passwd[i] <= 'z' && passwd[i] >= 'a' ))
  {
    i++;
  }

  if (i < n) p = 1;
  if (p) {
    while (!(passwd[i] < 'A' ||
       passwd[i] > 'Z' && passwd[i] < 'a' ||
       passwd[i] > 'z' ))
    {
      i++;
    }
    if (i < n) p = 2;
  }

  return p == 2;
}


