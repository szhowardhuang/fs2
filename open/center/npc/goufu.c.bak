// goufu.c

#include "/open/open.h"

inherit NPC;

string do_ask();

void create()
{
  set_name("倒霉的轿夫", ({ "bad-luck man", "man" }));
  set("race", "人类");
  set("gender", "男性");
  set("age", 25);
  set("long","你正盯着轿夫看，他正聚精会神的研究赌术哩。\n");
  set("attitude", "peaceful");
  set("str", 26);
  set("cor", 22);
  set("combat_exp", 273);
  set("chat_chance", 8);

  set("chat_msg",({
        "倒霉的轿夫说道: 么\二三啊 !\n",
        "倒霉的轿夫说道: 四五六啊 !\n",
        "倒霉的轿夫说道: 昨天才输光了裤子, 怎么今天运气还这么背 !\n",
        "轿夫说道: 茶水喝完了也不添一点, 唉, 这些人喔...\n",
        "倒霉的轿夫说道: 听说有个恶赌神找到一本赌神秘术，怎么不让我找到哩。\n",
        "倒霉的轿夫说道: 买好离手 !\n",
  }) );

  set("inquiry", ([
        "出关"          : "东南西北有四个关口, 也不知是哪一个?!",
        "赌术"          : "你想教我吗? 不过, 听说有一本赌神秘术, 也不知是不是真的!",
        "么\"           : "么\就是一点的意思嘛!",
        "么\二三"       : "么\二三就是骰子出一点或者出两点或者出三点的意思。",
        "输光"          : "唉, 说起来惭愧\, 跟恶赌神赌, 一连输了四十几把, 不输光才怪!",
        "恶赌神"        : "不就是轩辕三光吗? 不跟他赌硬逼人跟他赌。",
        "轩辕三光"      : (: do_ask :),
        "赌神秘术"      : "听说有了这本书之后, 可以纵横赌场, 要它开几点就开几点！",
        "茶水"          : "你要帮忙倒茶水? 先谢谢你!",
        "运气"          : "说什么运气, 还不是轩辕三光赖账, 哼, 要是有本事, 一定砍死他!",
        "赖账"          : "对付赖账的人应该抄家伙扁他一顿。",
        "抄家伙"        : "别抄家伙打我啊!",
        "扁他一顿"      : "对对对, 这位英雄就靠您为小的出口怨气",
        "出口怨气"      : "唉, 除了忍气吞声还能怎样呢？",
        "忍气吞声"      : "就靠您帮我们出口怨气了。",
  ]) );

  set_temp("apply/attack", 15);
  set_temp("apply/damage", 3);
  set_temp("apply/armor", 2);
  setup();
}

string do_ask()
{
  object        me=this_player();

  if (me->query("quests/gamble_book")) return "轩辕三光不就在赌场吗?\n";
  me->set_temp("quests/gamble_book",1);
  return "据说他昨晚后来输光光, 为了躲债, 出关去了。";
}
