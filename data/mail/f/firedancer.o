oc_paths);    while(i--) if( file_size(default_doc_paths[i] + arg)>0 ) {      me->start_more( read_file(default_doc_paths[i] + arg) );      return 1;    }  }  // 搜寻巫师的搜寻路径, 请看 /include/help.h  if( pointerp(wiz_doc_paths) ) {    i = sizeof(wiz_doc_paths);    while(i--) if( file_size(wiz_doc_paths[i] + arg)>0 ) {      me->start_more( read_file(wiz_doc_paths[i]+arg) );      return 1;    }  }  guild=GUILD_D->query_translate();  class=keys(guild);  for(i=0;i<sizeof(class);i++)  {        file=\"/daemon/class/\"+class[i]+\"/cmds/\"+arg;        if(file_size(file+\".c\")>0)        {                file->help(me);                return 1;        }  }return notify_fail(\"没有针对\"+arg+\"这项主题的说明文件。\\n\");}int help(object me){        write(@HELP指令格式 : help <主题>              例如：> help cmds           help <函数名称>()        例如：> help call_out()指令说明 :           这个指令提供你针对某一主题的详细说明文件，           若是不指定主题，则提供你有关主题的文件。HELP        );        return 1;}","time":990277860,"from":"飞碟(ufo)","title":"help.c","to":"firedancer",]),(["text":"编译时段错误：cmds/std/help.c line 15: parse error编译时段错误：cmds/std/help.c line 27: Undefined variable 'arg'编译时段错误：cmds/std/help.c line 27: Missing type for global variable declaration编译时段错误：cmds/std/help.c line 28: parse error执行时段错误：*Error in loading object '/cmds/std/help'程式：feature/command.c 第 70 行物件: /obj/user#4呼叫来自：feature/command.c 的 command_hook() 第 101 行，物件： obj/user#4 (\"风\")呼叫来自：feature/command.c 的 do_command() 第 70 行，物件： obj/user#4 (\"风\")","time":990277890,"from":"飞碟(ufo)","title":"error","to":"firedancer",]),(["text":"寒紫星身影微动，两道紫色灵光挟带一股强大气劲流窜而出，瞬间照耀了整个天地大地仿佛撼动了起来，天际传来轰轰天雷响彻云霄，地底冒出阵阵烈焰焚化万物。   ＿＿xyz{|}~  地  狱  雷  火  术  ~}|{zyx＿＿寒紫星左手画圆，气沉丹田，怒啸一声：                                     天雷啸　～                                        [   　  群星落　～                       灵光四起  ～   Xpa                                        ^                                     ～  雷动九天寒紫星右手凝气，灵神合一，黯然叹道：                  